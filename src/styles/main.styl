*
	box-sizing: border-box
	margin: 0
	padding: 0
	&:before, &:after
		box-sizing: inherit

html, body
	width: 100%
	height: 100%

body
	line-height: 1.5
	font-family: 'Open Sans', Arial, Helvetica,sans-serif
	-webkit-font-smoothing: antialiased
	-moz-osx-font-smoothing: grayscale

p, span, i, b
	font-size: 1rem
	color: #555

h1, h2, h3, h4, h5, h6
	margin-bottom: 1rem
	color: #444

h1
	font-size: 2rem

h2
	font-size: 1.8rem

h3
	font-size: 1.6rem

h4
	font-size: 1.4rem

h5
	font-size: 1.2rem

h6
	font-size: 1rem

section
	margin-bottom: 3rem

#app
	height: 100%

hr
	border: 0px
	width: 100%
	height: 1px
	background-color: #EEE

.page
	//padding: 1.75rem
	padding-top: 0rem

a
	color: #42A5F5
	text-decoration: none
	&:hover
		text-decoration: underline

.row
	max-width: 62.5rem
	@media screen and (min-width: 64em)
		width: 62.5rem
		margin: 0 auto

.btn
	background-color: transparent
	margin-top: 2rem
	letter-spacing: 2px
	color: #DDD
	border: 1px solid #888
	padding: 1rem
	font-size: 1.3rem
	border-radius: .5rem
	outline: none
	transition-property: background, border
	transition: 250ms cubic-bezier(0.25, 0.46, 0.45, 0.94)
	&:hover
		background-color: rgba(255,255,255,0.1)
		border: 1px solid #000
